# ============================================================
# GRASP Configuration - All settings via environment variables
# ============================================================

# Core
GRASP_LOG_LEVEL=info
GRASP_API_PORT=8443

# Graph Database
GRASP_GRAPH_DB_URI=bolt://grasp-neo4j:7687
GRASP_GRAPH_DB_USER=neo4j
GRASP_GRAPH_DB_PASSWORD=grasp_2026

# Graph Lifecycle
GRASP_GRAPH_HOT_RETENTION_HOURS=24
GRASP_GRAPH_WARM_RETENTION_DAYS=30

# Intelligence Engine
GRASP_BASELINE_MIN_EVENTS=10000
GRASP_ANOMALY_THRESHOLD=0.85
GRASP_ATTACK_CHAIN_MIN_CONFIDENCE=0.70

# Source 1: Wazuh Alerts (Elasticsearch)
GRASP_SOURCE_1_TYPE=search_index
GRASP_SOURCE_1_ENDPOINT=https://10.90.0.10:9200
GRASP_SOURCE_1_AUTH_USER=admin
GRASP_SOURCE_1_AUTH_PASSWORD=ZWAdmin.123
GRASP_SOURCE_1_CA_CERT=/app/certs/root-ca.pem
GRASP_SOURCE_1_INDEX_PATTERN=wazuh-alerts-4.x-*
GRASP_SOURCE_1_TLS_VERIFY=true

# Discovery Engine
GRASP_DISCOVERY_MIN_FIELD_VALUES=10
GRASP_DISCOVERY_SAMPLE_SIZE=5000